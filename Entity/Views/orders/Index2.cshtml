@model IEnumerable< Entity.Models.orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer inndex</h1>

<p>
    <a asp-action="buy">Buy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bookid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.custid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.buydate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        {

        @foreach(orders order in Model)
        {



            <tr>

                <td>
                    @Html.DisplayFor(modelItem => order.bookid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.custid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.buydate)
                </td>
                <td>

                    <a asp-action="Details" asp-route-id="order.Id">Details</a>

                </td>
            </tr>




}
            
        }
    </tbody>
</table>
